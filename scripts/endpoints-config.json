{
  "system_endpoints": [
    {
      "name": "health",
      "description": "Health check",
      "example_payload": "{}",
      "is_system": true
    },
    {
      "name": "info", 
      "description": "Service information",
      "example_payload": "{}",
      "is_system": true
    }
